{
  "name": "monaco-dolphindb",
  "version": "0.0.11",
  "description": "Support DolphinDB language in Monaco Editor (syntax highlight, completions, docs)",
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js"
    },
    "./theme/*": {
      "types": "./dist/theme/*.d.ts",
      "import": "./dist/theme/*.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "cd example && vite",
    "prepublishOnly": "pnpm run build",
    "build": "tsc",
    "clean": "rimraf dist",
    "prepare": "husky install && zx ./scripts/prepare.js"
  },
  "license": "Apache-2.0",
  "author": "DolphinDB",
  "homepage": "https://github.com/dolphindb/monaco-dolphindb",
  "repository": {
    "type": "git",
    "url": "https://github.com/dolphindb/monaco-dolphindb.git"
  },
  "keywords": [
    "monaco",
    "monaco-editor",
    "dolphindb",
    "language"
  ],
  "devDependencies": {
    "@monaco-editor/react": "^4.5.2",
    "@types/node": "^20.5.9",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "@vitejs/plugin-react": "^4.0.4",
    "dolphindb": "^2.0.1022",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "monaco-editor": "^0.41.0",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.1",
    "semantic-release": "^21.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-monaco-editor": "^1.1.0",
    "vite-plugin-pages": "^0.31.0",
    "vite-tsconfig-paths": "^4.2.0",
    "vscode-oniguruma": "^2.0.0",
    "vscode-textmate": "^9.0.0",
    "zx": "^7.2.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "dolphindb": "^2.0.976",
    "monaco-editor": "^0.39.0",
    "vscode-oniguruma": "^1.7.0",
    "vscode-textmate": "^9.0.0"
  },
  "optionalDependencies": {
    "@monaco-editor/react": "^4.5.2"
  }
}
