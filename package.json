{
  "name": "monaco-dolphindb",
  "version": "0.0.17",
  "description": "Support DolphinDB language in Monaco Editor (syntax highlight, completions, docs)",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./vscode": {
      "types": "./dist/vscode.d.ts",
      "import": "./dist/vscode.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js"
    },
    "./theme/*": {
      "types": "./dist/theme/*.d.ts",
      "import": "./dist/theme/*.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "cd example && vite",
    "cm": "cz",
    "g-changelog": "conventional-changelog -p conventionalcommits -i CHANGELOG.md -s",
    "prepublishOnly": "pnpm run build && ",
    "build": "tsc",
    "clean": "rimraf dist",
    "prepare": "husky install && zx ./scripts/prepare.js"
  },
  "license": "Apache-2.0",
  "author": "DolphinDB",
  "homepage": "https://github.com/dolphindb/monaco-dolphindb",
  "repository": {
    "type": "git",
    "url": "https://github.com/dolphindb/monaco-dolphindb.git"
  },
  "keywords": [
    "monaco",
    "monaco-editor",
    "dolphindb",
    "language"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.8.0",
    "@commitlint/config-conventional": "^17.8.0",
    "@monaco-editor/react": "^4.5.2",
    "@types/node": "^20.6.0",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/vscode": "^1.84.1",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vitejs/plugin-react": "^4.0.4",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^4.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "dolphindb": "^2.0.1022",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "monaco-editor": "^0.43.0",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-monaco-editor": "^1.1.0",
    "vite-plugin-pages": "^0.31.0",
    "vite-tsconfig-paths": "^4.2.1",
    "vscode-oniguruma": "^2.0.0",
    "vscode-textmate": "^9.0.0",
    "zx": "^7.2.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "dolphindb": "^2.0.976",
    "monaco-editor": "^0.39.0",
    "vscode-oniguruma": "^1.7.0",
    "vscode-textmate": "^9.0.0"
  },
  "optionalDependencies": {
    "@monaco-editor/react": "^4.5.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
